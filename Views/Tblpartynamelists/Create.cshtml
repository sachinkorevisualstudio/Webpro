@model Webpro.Models.Tblpartynamelist

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tblpartynamelist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Tblpartynamelists">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Tblpartynamelist Model Fields -->
            <div class="form-group">
                <label asp-for="Partyname" class="control-label"></label>
                <input asp-for="Partyname" class="form-control" required />
                <span asp-validation-for="Partyname" class="text-danger"></span>
            </div>

            <!-- GstCustomer as dropdown -->
            <div class="form-group">
                <label asp-for="GstCustomer" class="control-label">Is GST Customer select yes/No?</label>
                <select asp-for="GstCustomer" class="form-control">
                    <option value="No" selected>No</option>
                    <option value="Yes">Yes</option>
                </select>
                <span asp-validation-for="GstCustomer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transcharge" class="control-label"></label>
                <input asp-for="Transcharge" type="number" value="0" class="form-control" required min="0" max="9999" />
                <span asp-validation-for="Transcharge" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Discount" class="control-label"> % Discount for employee/other relative</label>
                <input asp-for="Discount" type="number" value="0" class="form-control" required min="0" max="99" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
